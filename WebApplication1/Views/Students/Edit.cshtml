@model WebApplication1.Models.Student

<h1>Edit Student</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeptId" class="control-label"></label>
        <select asp-for="DeptId" class="form-control" asp-items="ViewBag.Departments"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Courses</label>
        <select name="selectedCourses" class="form-control" asp-items="ViewBag.Courses" multiple></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
