@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewData["Title"] = "Courses";
    int? joinedCourseId = ViewBag.JoinedCourseId as int?;
}

<h1 class="mb-4">Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Add New Course</a>
</p>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@(Context.Request.Query["search"])" placeholder="Search by name" class="form-control w-25 d-inline" />
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>


<table class="table table-striped table-bordered align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Degree)</th>
            <th>@Html.DisplayNameFor(model => model.MinimumDegree)</th>
            <th>@Html.DisplayNameFor(model => model.Hours)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>Join Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            bool isJoined = joinedCourseId != null && joinedCourseId == item.Id;
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Degree)</td>
                <td>@Html.DisplayFor(modelItem => item.MinimumDegree)</td>
                <td>@Html.DisplayFor(modelItem => item.Hours)</td>
                <td>@item.Department?.Name</td>
                <td>
                    @if (isJoined)
                    {
                        <span class="badge bg-success px-3 py-2">Joined</span>
                    }
                    else
                    {
                        <form asp-action="JoinCourse" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">Join</button>
                        </form>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('Are you sure you want to delete this item?')"
                       class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-route-page="@i">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
